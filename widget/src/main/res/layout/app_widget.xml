<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context="WidgetProvider">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:orientation="horizontal"
    android:background="@color/colorPrimary">

    <LinearLayout
      android:id="@+id/busStopContainer"
      android:layout_width="0dp"
      android:layout_weight="1"
      android:layout_height="match_parent"
      android:orientation="vertical"
      android:paddingTop="5dp"
      android:paddingStart="5dp"
      android:paddingBottom="5dp"
      tools:ignore="RtlSymmetry">

      <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/codeStop_textview"
        android:textSize="17dp"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:padding="1dp"
        android:maxLines="1"
        android:ellipsize="end"
        tools:text="279"
        tools:ignore="SpUsage" />

      <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/nameStop_textview"
        android:textSize="13dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@android:color/white"
        android:padding="1dp"
        tools:ignore="SpUsage"
        tools:text="Hospital ClÃ­nico T" />

    </LinearLayout>

    <LinearLayout
      android:id="@+id/syncContainer"
      android:layout_width="50dp"
      android:layout_height="match_parent"
      android:orientation="vertical">

      <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ImageView
          android:id="@+id/refresh_button"
          android:layout_width="24dp"
          android:layout_height="24dp"
          android:src="@drawable/ic_sync"
          android:visibility="visible"
          android:focusable="true"
          android:contentDescription="@string/sync_widget"
          android:layout_gravity="center" />

        <ProgressBar
          style="?android:attr/progressBarStyleSmall"
          android:layout_width="24dp"
          android:layout_height="24dp"
          android:id="@+id/progressBar"
          android:visibility="gone"
          android:layout_gravity="center" />

      </FrameLayout>

      <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/hourSync_textview"
        android:textSize="13dp"
        android:textColor="#ff5a595b"
        android:gravity="center"
        android:paddingBottom="5dp"
        tools:ignore="SpUsage"
        tools:text="22:00" />

    </LinearLayout>

  </LinearLayout>

  <FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <ListView
      android:id="@+id/times_listview"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:divider="@null"
      android:visibility="visible" />

    <TextView
      android:id="@+id/empty_message_textview"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:textColor="#ff5a595b"
      android:gravity="center"
      android:textSize="13dp"
      android:text="@string/no_information"
      tools:ignore="SpUsage" />

  </FrameLayout>

</LinearLayout>
