<?xml version="1.0" encoding="utf-8"?>
<appwidget-provider
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:initialLayout="@layout/app_widget"
  android:minWidth="130dp"
  android:minHeight="130dp"
  android:minResizeWidth="110dp"
  android:minResizeHeight="110dp"
  android:label="@string/favorite_stop"
  android:previewImage="@drawable/preview_app_widget"
  android:resizeMode="horizontal|vertical"
  android:configure="widget.WidgetActivity"
  android:updatePeriodMillis="0"/>
  <!--
   updatePeriodMillis -> By setting 0 as a parameter,
                          we're saying that we don't want the widget to update itself.
   previewImage       -> This image should be saved in the drawable-nodpi folder.
  -->