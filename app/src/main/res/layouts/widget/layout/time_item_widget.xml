<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:orientation="horizontal"
  android:padding="@dimen/small_padding"
  android:gravity="center_vertical"
  android:background="@android:color/white"
  tools:context="widget.TimesViewsFactory">

  <FrameLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
      android:id="@+id/lineWidgetImageView"
      android:layout_width="@dimen/synoptic_size"
      android:layout_height="@dimen/synoptic_size"
      tools:ignore="ContentDescription" />

    <TextView
      android:id="@+id/lineWidgetTextView"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textSize="16dp"
      android:textStyle="bold"
      android:layout_gravity="center"
      android:textColor="@android:color/white"
      tools:text="P2"
      tools:ignore="SpUsage" />

  </FrameLayout>

  <TextView
    android:id="@+id/timeWidgetTextView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textSize="18dp"
    android:lines="1"
    android:ellipsize="end"
    android:layout_marginStart="12dp"
    android:textColor="@android:color/tab_indicator_text"
    tools:text="5 min"
    tools:ignore="SpUsage" />

</LinearLayout>
