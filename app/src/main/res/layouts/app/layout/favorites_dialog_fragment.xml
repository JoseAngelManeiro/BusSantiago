<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:id="@+id/rootBottomSheetDialog"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@drawable/bg_top_corners"
  android:orientation="vertical"
  tools:context="org.galio.bussantiago.features.favorites.FavoritesDialogFragment">

  <View
    android:id="@+id/constraintLayoutTapper"
    android:layout_width="40dp"
    android:layout_height="4dp"
    android:layout_marginTop="9dp"
    android:background="@drawable/bg_tap_element"
    android:layout_gravity="center_horizontal"/>

  <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="@dimen/small_text_size"
    android:text="@string/favorite_bus_stops"
    android:layout_marginTop="24dp"
    android:layout_gravity="center_horizontal"
    android:textStyle="bold"
    android:textColor="#000000"/>

  <View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:layout_marginTop="10dp"
    android:background="@color/tap_element"/>

  <FrameLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.recyclerview.widget.RecyclerView
      android:id="@+id/favoritesRecyclerView"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:scrollbars="vertical"
      app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
      tools:listitem="@layout/favorite_item"
      tools:itemCount="4"/>

    <TextView
      android:id="@+id/noFavoritesTextView"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/no_favorites"
      android:textSize="@dimen/default_text_size"
      android:layout_gravity="center"
      android:visibility="gone"
      android:layout_margin="@dimen/large_margin"
      tools:visibility="visible" />

  </FrameLayout>

</LinearLayout>

