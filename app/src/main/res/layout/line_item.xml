<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:orientation="horizontal"
  android:paddingStart="@dimen/default_padding"
  android:paddingEnd="@dimen/default_padding"
  android:paddingTop="@dimen/small_padding"
  android:paddingBottom="@dimen/small_padding"
  android:gravity="center_vertical"
  android:background="?attr/selectableItemBackground"
  tools:context="org.galio.bussantiago.features.lines.LinesAdapter">

  <FrameLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <org.galio.bussantiago.common.model.SynopticView
      android:id="@+id/synopticView"
      android:layout_width="@dimen/synoptic_size"
      android:layout_height="@dimen/synoptic_size"
      tools:text="C11" />

    <ImageView
      android:id="@+id/incidentsImageView"
      android:layout_width="@dimen/line_incident_icon_size"
      android:layout_height="@dimen/line_incident_icon_size"
      android:src="@drawable/ic_incidences"
      android:layout_gravity="bottom|end"
      android:background="@drawable/incidents_background"
      android:padding="@dimen/extra_extra_small_padding"
      android:importantForAccessibility="no" />

  </FrameLayout>

  <TextView
    android:id="@+id/nameTextView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textSize="@dimen/default_text_size"
    android:lines="2"
    android:ellipsize="end"
    android:layout_marginStart="@dimen/default_margin"
    android:gravity="center_vertical"
    tools:text="Est. de autobuses / OrtoÃ±o de autobuses" />

</LinearLayout>
